<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/collapsable_heading_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/collapsable_heading_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Watched"/>

        <ImageView
            android:id="@+id/collapsable_heading_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_expand_more_24"/>

    </LinearLayout>

    <Button
        android:id="@+id/collapsable_heading_button_temp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="This is suppose to be a Recyclerview"/>

