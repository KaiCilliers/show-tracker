<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/my_list_tvshow_poster"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#000000"/>

    <TextView
        android:id="@+id/my_list_tvshow_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/my_list_tvshow_poster"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="The BlackList"/>

    <TextView
        android:id="@+id/my_list_tvshow_episode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/my_list_tvshow_poster"
        app:layout_constraintTop_toBottomOf="@id/my_list_tvshow_title"
        tools:text="The Deer Hunter (No.42)"/>

    <com.sunrisekcdeveloper.ui_components.StProgressIndicator
        android:id="@+id/my_list_tvshow_progressbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/my_list_tvshow_poster"
        app:layout_constraintTop_toBottomOf="@id/my_list_tvshow_episode_title"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/my_list_tvshow_episode_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Episode Info"
        app:layout_constraintStart_toEndOf="@id/my_list_tvshow_poster"
        app:layout_constraintTop_toBottomOf="@id/my_list_tvshow_progressbar"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_constraintTop_toBottomOf="@id/my_list_tvshow_episode_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>