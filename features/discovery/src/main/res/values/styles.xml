<resources>
    <style name="Widget.ShowTracker.TextView.HeaderMediaList"
        parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
    </style>

    <style name="Widget.ShowTracker.TextView.SubheaderMediaList"
        parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
    </style>

    <style name="Widget.ShowTracker.RecyclerView.HorizontalList" parent="Widget.AppCompat.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_large</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
</resources>