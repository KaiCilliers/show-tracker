<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".presentation.FragmentBottomSheetMovieDetail">

    <!-- TODO  give correct poster dimensions-->
    <ImageView
        android:id="@+id/img_detail_media_poster"
        android:layout_width="135dp"
        android:layout_height="241dp"
        android:layout_margin="@dimen/margin_medium"
        tools:src="@drawable/error_poster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_detail_media_add_remove"/>

    <Button
        android:id="@+id/btn_detail_media_add_remove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/media_add"
        android:enabled="false"
        tools:enabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_detail_media_watch_status"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_detail_media_watch_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/action_set_watched"
        android:enabled="false"
        tools:enabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_detail_media_add_remove" />

    <LinearLayout
        android:id="@+id/layout_detail_media_skeleton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_media_title"
        app:layout_constraintStart_toEndOf="@id/img_detail_media_poster"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/img_detail_media_poster">

        <include layout="@layout/skeleton_detail"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_detail_media_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:maxLines="3"
        android:ellipsize="end"
        tools:text="Media Title"
        app:layout_constraintStart_toEndOf="@+id/img_detail_media_poster"
        app:layout_constraintEnd_toStartOf="@id/img_detail_movie_close"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_detail_media_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_small"
        android:ellipsize="end"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintBottom_toTopOf="@+id/btn_detail_media_watch_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/img_detail_media_poster"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_media_tags"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Here is all the description you could need..." />

    <TextView
        android:id="@+id/tv_detail_media_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:textAppearance="?attr/textAppearanceCaption"
        tools:text="1998 | TV-24 | 3 Seasons"
        app:layout_constraintStart_toEndOf="@+id/img_detail_media_poster"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_media_title"/>

    <ImageView
        android:id="@+id/img_detail_movie_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_close_24" />

</androidx.constraintlayout.widget.ConstraintLayout>