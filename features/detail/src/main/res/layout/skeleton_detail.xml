<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/skeleton_year"
        android:layout_width="50sp"
        android:layout_height="15sp"
        android:background="@color/skeleton"
        android:layout_margin="@dimen/margin_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/skeleton_certification"
        android:layout_width="50sp"
        android:layout_height="15sp"
        android:background="@color/skeleton"
        android:layout_margin="@dimen/margin_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/skeleton_year"/>
    <View
        android:id="@+id/skeleton_runtime_seasons"
        android:layout_width="50sp"
        android:layout_height="15sp"
        android:background="@color/skeleton"
        android:layout_margin="@dimen/margin_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/skeleton_certification"/>

    <View
        android:id="@+id/skeleton_overview_one"
        android:layout_width="175sp"
        android:layout_height="15sp"
        android:layout_margin="@dimen/margin_medium"
        android:background="@color/skeleton"
        app:layout_constraintTop_toBottomOf="@id/skeleton_year"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/skeleton_overview_two"
        android:layout_width="160sp"
        android:layout_height="15sp"
        android:layout_margin="@dimen/margin_medium"
        android:background="@color/skeleton"
        app:layout_constraintTop_toBottomOf="@id/skeleton_overview_one"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/skeleton_overview_three"
        android:layout_width="175sp"
        android:layout_height="15sp"
        android:layout_margin="@dimen/margin_medium"
        android:background="@color/skeleton"
        app:layout_constraintTop_toBottomOf="@id/skeleton_overview_two"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/skeleton_overview_four"
        android:layout_width="165sp"
        android:layout_height="15sp"
        android:layout_margin="@dimen/margin_medium"
        android:background="@color/skeleton"
        app:layout_constraintTop_toBottomOf="@id/skeleton_overview_three"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/skeleton_overview_five"
        android:layout_width="170sp"
        android:layout_height="15sp"
        android:layout_margin="@dimen/margin_medium"
        android:background="@color/skeleton"
        app:layout_constraintTop_toBottomOf="@id/skeleton_overview_four"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>