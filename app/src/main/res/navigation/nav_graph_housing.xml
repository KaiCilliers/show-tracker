<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_housing"
    app:startDestination="@id/navigation_discovery_updated">


    <fragment
        android:id="@+id/navigation_discovery_updated"
        android:name="com.sunrisekcdeveloper.showtracker.updated.features.discovery.presentation.DiscoveryFragmentUpdated"
        android:label="fragment_discovery_updated"
        tools:layout="@layout/fragment_discovery_updated" >
        <action
            android:id="@+id/action_navigation_discovery_updated_to_searchActivityUpdated"
            app:destination="@id/searchActivityUpdated" />
        <action
            android:id="@+id/action_navigation_discovery_updated_to_discoveryMoviesFragmentUpdated"
            app:destination="@id/discoveryMoviesFragmentUpdated" />
        <action
            android:id="@+id/action_navigation_discovery_updated_to_discoveryShowsFragmentUpdated"
            app:destination="@id/discoveryShowsFragmentUpdated" />
    </fragment>
    <fragment
        android:id="@+id/navigation_watchlist_updated"
        android:name="com.sunrisekcdeveloper.showtracker.updated.features.watchlist.WatchlistFragmentUpdated"
        android:label="fragment_watchlist_updated"
        tools:layout="@layout/fragment_watchlist_updated" />
    <fragment
        android:id="@+id/navigation_statistics_updated"
        android:name="com.sunrisekcdeveloper.showtracker.updated.features.statistics.StatisticsFragmentUpdated"
        android:label="fragment_statistics_updated"
        tools:layout="@layout/fragment_statistics_updated" />
    <activity
        android:id="@+id/searchActivityUpdated"
        android:name="com.sunrisekcdeveloper.showtracker.updated.features.search.SearchActivityUpdated"
        android:label="activity_search_updated"
        tools:layout="@layout/activity_search_updated" />
    <fragment
        android:id="@+id/discoveryMoviesFragmentUpdated"
        android:name="com.sunrisekcdeveloper.showtracker.updated.features.discovery.presentation.movies.DiscoveryMoviesFragmentUpdated"
        android:label="fragment_discovery_movies_updated"
        tools:layout="@layout/fragment_discovery_movies_updated" >
        <action
            android:id="@+id/action_discoveryMoviesFragmentUpdated_to_navigation_discovery_updated"
            app:destination="@id/navigation_discovery_updated"
            app:popUpTo="@id/discoveryMoviesFragmentUpdated"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_discoveryMoviesFragmentUpdated_to_discoveryShowsFragmentUpdated"
            app:destination="@id/discoveryShowsFragmentUpdated"
            app:popUpTo="@id/discoveryMoviesFragmentUpdated"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_discoveryMoviesFragmentUpdated_to_searchActivityUpdated"
            app:destination="@id/searchActivityUpdated" />
    </fragment>
    <fragment
        android:id="@+id/discoveryShowsFragmentUpdated"
        android:name="com.sunrisekcdeveloper.showtracker.updated.features.discovery.presentation.shows.DiscoveryShowsFragmentUpdated"
        android:label="fragment_discovery_shows_updated"
        tools:layout="@layout/fragment_discovery_shows_updated" >
        <action
            android:id="@+id/action_discoveryShowsFragmentUpdated_to_navigation_discovery_updated"
            app:destination="@id/navigation_discovery_updated"
            app:popUpTo="@id/discoveryShowsFragmentUpdated"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_discoveryShowsFragmentUpdated_to_discoveryMoviesFragmentUpdated"
            app:destination="@id/discoveryMoviesFragmentUpdated"
            app:popUpTo="@id/discoveryShowsFragmentUpdated"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_discoveryShowsFragmentUpdated_to_searchActivityUpdated"
            app:destination="@id/searchActivityUpdated" />
    </fragment>
    <dialog
        android:id="@+id/detailMovieBottomSheet"
        android:name="com.sunrisekcdeveloper.showtracker.updated.features.detail.presentation.DetailMovieBottomSheet"
        android:label="bottom_sheet_detail_movie"
        tools:layout="@layout/bottom_sheet_detail_movie" >
        <argument
            android:name="movieId"
            app:argType="string" />
    </dialog>
    <dialog
        android:id="@+id/detailShowBottomSheet"
        android:name="com.sunrisekcdeveloper.showtracker.updated.features.detail.presentation.DetailShowBottomSheet"
        android:label="bottom_sheet_detail_show"
        tools:layout="@layout/bottom_sheet_detail_show" >
        <argument
            android:name="showId"
            app:argType="string" />
    </dialog>
    <action android:id="@+id/action_global_detailShowBottomSheet" app:destination="@id/detailShowBottomSheet"/>
    <action android:id="@+id/action_global_detailMovieBottomSheet" app:destination="@id/detailMovieBottomSheet"/>
</navigation>