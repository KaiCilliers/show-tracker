<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_search"
    app:startDestination="@id/destination_search_search_fragment">

    <fragment
        android:id="@+id/destination_search_search_fragment"
        android:name="com.sunrisekcdeveloper.showtracker.features.search.presentation.FragmentSearch"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/navigate_from_search_to_bottom_sheet_detail_movie"
            app:destination="@id/destination_search_bottom_sheet_detail_movie" />
        <action
            android:id="@+id/navigate_from_search_to_bottom_sheet_detail_show"
            app:destination="@id/destination_search_bottom_sheet_detail_show" />
    </fragment>
    <dialog
        android:id="@+id/destination_search_bottom_sheet_detail_movie"
        android:name="com.sunrisekcdeveloper.showtracker.features.detail.presentation.FragmentBottomSheetMovieDetail"
        android:label="bottom_sheet_detail_movie"
        tools:layout="@layout/bottom_sheet_movie_detail" >
        <argument
            android:name="movieId"
            app:argType="string" />
    </dialog>
    <dialog
        android:id="@+id/destination_search_bottom_sheet_detail_show"
        android:name="com.sunrisekcdeveloper.showtracker.features.detail.presentation.FragmentBottomSheetShowDetail"
        android:label="bottom_sheet_detail_show"
        tools:layout="@layout/bottom_sheet_show_detail" >
        <argument
            android:name="showId"
            app:argType="string" />
    </dialog>
</navigation>