<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph_main"
    app:startDestination="@id/progressFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sunrisekcdeveloper.showtracker.ui.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/to_progress"
            app:destination="@id/progressFragment" />
        <action
            android:id="@+id/to_search"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/progressFragment"
        android:name="com.sunrisekcdeveloper.showtracker.ui.ProgressFragment"
        android:label="ProgressFragment"
        tools:layout="@layout/fragment_progress">
        <action
            android:id="@+id/to_home"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.sunrisekcdeveloper.showtracker.ui.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/to_home"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>