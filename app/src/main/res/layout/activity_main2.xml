<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.sunrisekcdeveloper.ui_components.StProgressIndicator
                android:id="@+id/mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.sunrisekcdeveloper.ui_components.StAdditionalActions
                android:id="@+id/actions"
                app:layout_constraintTop_toBottomOf="@id/mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.sunrisekcdeveloper.ui_components.StRatingIndicator
                android:id="@+id/rating_guy"
                app:layout_constraintTop_toBottomOf="@id/actions"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.sunrisekcdeveloper.ui_components.StSubList
                android:id="@+id/genre_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rating_guy"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.sunrisekcdeveloper.ui_components.StMyListTvShow
                android:id="@+id/my_list_tv_show_main"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/genre_list"/>

            <com.sunrisekcdeveloper.ui_components.StCollapsableHeading
                android:id="@+id/collapsable_heading_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_list_tv_show_main"/>

            <com.sunrisekcdeveloper.ui_components.StCollapsableText
                android:id="@+id/collapsable_text_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/collapsable_heading_main"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>