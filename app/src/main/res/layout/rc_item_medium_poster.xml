<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="movie"
            type="com.sunrisekcdeveloper.showtracker.models.roomresults.Movie" />
        <variable
            name="clickListener"
            type="com.sunrisekcdeveloper.showtracker.commons.components.ClickActionContract" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_temp_movie_title_medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:layout_margin="@dimen/margin_2"
            android:textAlignment="center"
            android:text="@{movie.title}"
            android:textColor="@color/black"
            android:elevation="@dimen/margin_8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Movie Title"/>
        <ImageView
            android:id="@+id/imgv_movie_medium_poster"
            android:layout_width="82dp"
            android:layout_height="120dp"
            android:padding="2dp"
            android:src="@drawable/test"
            android:scaleType="centerCrop"
            android:onClick="@{() -> clickListener.onClick(movie)}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/test" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/imgv_movie_medium_poster"
            app:layout_constraintEnd_toEndOf="@+id/tv_temp_movie_title_medium"
            app:srcCompat="@android:drawable/ic_input_add" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>