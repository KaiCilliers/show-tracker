<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_preview_container_movie_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:focusable="true"
        app:cardCornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgv_item_preview_movie_poster"
                android:layout_width="0dp"
                android:layout_height="250dp"
                app:layout_constraintDimensionRatio="3:4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/error_poster" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_preview_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:textAppearance="?attr/textAppearanceHeadline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_preview_container_movie_poster"
        tools:text="Movie Title" />

    <TextView
        android:id="@+id/tv_preview_movie_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:textAppearance="?attr/textAppearanceHeadline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_preview_movie_title"
        tools:text="8.0" />

    <RatingBar
        android:id="@+id/rating_preview_movie_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_preview_movie_rating"
        tools:rating="3.5" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_preview_movie_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        app:layout_constraintTop_toBottomOf="@id/rating_preview_movie_rating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_preview_label_movie_runtime"
            android:layout_margin="@dimen/margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/runtime"
            app:layout_constraintEnd_toStartOf="@+id/tv_preview_label_movie_year"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_preview_label_movie_year"
            android:layout_margin="@dimen/margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/year"
            app:layout_constraintEnd_toStartOf="@+id/tv_preview_label_movie_language"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_preview_label_movie_runtime"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_preview_label_movie_language"
            android:layout_margin="@dimen/margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/language"
            app:layout_constraintEnd_toStartOf="@+id/tv_preview_label_movie_age_rating"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_preview_label_movie_year"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_preview_label_movie_age_rating"
            android:layout_margin="@dimen/margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/age_rating"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_preview_label_movie_language"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_preview_movie_runtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="144 min"
            app:layout_constraintTop_toBottomOf="@id/tv_preview_label_movie_runtime"
            app:layout_constraintStart_toStartOf="@id/tv_preview_label_movie_runtime"/>

        <TextView
            android:id="@+id/tv_preview_movie_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2004"
            app:layout_constraintTop_toBottomOf="@id/tv_preview_label_movie_year"
            app:layout_constraintStart_toStartOf="@id/tv_preview_label_movie_year"/>

        <TextView
            android:id="@+id/tv_preview_movie_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="English"
            app:layout_constraintTop_toBottomOf="@id/tv_preview_label_movie_language"
            app:layout_constraintStart_toStartOf="@id/tv_preview_label_movie_language"/>

        <TextView
            android:id="@+id/tv_preview_movie_age_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="PG"
            app:layout_constraintTop_toBottomOf="@id/tv_preview_label_movie_age_rating"
            app:layout_constraintStart_toStartOf="@id/tv_preview_label_movie_age_rating"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_preview_movie_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        tools:text="Tagline Goes Here"
        app:layout_constraintTop_toBottomOf="@id/container_preview_movie_details"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_preview_movie_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:textAppearance="?attr/textAppearanceBody2"
        tools:text="Here is all the description you could need... ad adas dasd asd asda awd awda awd awda daw dw daaw da awdaw d"
        app:layout_constraintTop_toBottomOf="@id/tv_preview_movie_tagline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/horizontal_line_preview_top"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:background="@color/blue_grey_700"
        android:layout_margin="@dimen/margin_medium"
        app:layout_constraintTop_toBottomOf="@id/tv_preview_movie_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_preview_genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        app:layout_constraintTop_toBottomOf="@id/horizontal_line_preview_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>