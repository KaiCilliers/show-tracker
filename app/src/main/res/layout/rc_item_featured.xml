<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="featuredList"
            type="com.sunrisekcdeveloper.showtracker.entities.domain.FeaturedList" />
        <variable
            name="clickListener"
            type="com.sunrisekcdeveloper.showtracker.ui.rc.PosterClickAction" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{featuredList.heading}"
            android:onClick="@{() -> clickListener.onClick(featuredList.results[0])}"
            android:layout_margin="@dimen/margin_8"
            android:textSize="@dimen/text_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="New Releases" />

        <!--TODO bottom nav bar covers the bottom of the RC list data -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_featured_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8"
            android:padding="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_heading"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>