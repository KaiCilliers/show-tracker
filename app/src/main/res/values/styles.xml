<resources>

    <style name="Widget.ShowTracker.BottomNavigationView"
        parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="labelVisibilityMode">selected</item>
        <item name="itemIconTint">@color/bottom_nav_item</item>
        <item name="itemTextColor">@color/bottom_nav_item</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.ShowTracker.BottomNavigation</item>
    </style>

    <!-- Filter Radio Button -->
    <style name="radio_filter_item_style">
        <item name="android:background">@drawable/radio_flat_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/radio_flat_text_selector</item>
    </style>

    <style name="Widget.ShowTracker.TextView.HeaderMediaList"
        parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
    </style>

    <style name="Widget.ShowTracker.TextView.SubheaderMediaList"
        parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
    </style>

